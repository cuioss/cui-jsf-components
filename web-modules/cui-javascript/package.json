{
  "name": "cui",
  "version": "4.0.0",
  "description": "Compile and package cui core javascript resources",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cuioss/cui-jsf-components.git"
  },
  "devDependencies": {
    "typescript": "^4.5.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-jquery": "1.5.1",
    "concat": "^1.0.3",
    "terser": "^5.29.0"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint src/main/resources/META-INF/resources/de.cuioss.javascript/**/*.js src/test/javascript/**/*.js",
    "clean:build": "rm -rf target/uglify",
    "prepare:dirs": "mkdir -p target/uglify",
    "concat:js": "concat -o target/uglify/cui.js src/main/resources/META-INF/resources/de.cuioss.javascript/cui_utilities.js src/main/resources/META-INF/resources/de.cuioss.javascript/session.js src/main/resources/META-INF/resources/de.cuioss.javascript/portal.js src/main/resources/META-INF/resources/de.cuioss.javascript/tabcontrol.js src/main/resources/META-INF/resources/de.cuioss.javascript/cui.js src/main/resources/META-INF/resources/de.cuioss.javascript/scheduler.js",
    "minify:js": "terser target/uglify/cui.js -o target/uglify/cui.min.js -c -m",
    "build": "npm run clean:build && npm run prepare:dirs && npm run concat:js && npm run minify:js"
  }
}
